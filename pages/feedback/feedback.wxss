page {
  background-color: #eee;
}
.fb_main {
  padding: 30rpx;
  color: 666;
}
.fb_main .fb_title {
  margin-bottom: 20rpx;
}
.fb_main .fd_tips {
  display: flex;
  flex-wrap: wrap;
}
.fb_main .fd_tips text {
  width: 30%;
  padding: 10rpx;
  text-align: center;
  background-color: #fff;
  margin: 20rpx 10rpx;
}
.fb_main .fb_content {
  background-color: #fff;
  margin: 20rpx 0;
}
.fb_main .fb_content textarea {
  padding: 15rpx;
}
.fb_main .fb_content .fb_tool {
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 20rpx;
}
.fb_main .fb_content .fb_tool button {
  margin: 0;
  width: 90rpx;
  height: 90rpx;
  font-size: 60rpx;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  margin-top: 24rpx;
  background-color: #eee;
  color: #b4b4b4;
}
.fb_main .fb_content .fb_tool .up_img_item {
  margin-left: 20rpx;
  margin-top: 24rpx;
}
.fb_main .form_btn_wrap {
  margin-top: 60rpx;
  display: flex;
  justify-content: flex-end;
}
.fb_main .form_btn_wrap button {
  width: 40%;
  margin: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: var(--themeColor);
  color: #fff;
}
